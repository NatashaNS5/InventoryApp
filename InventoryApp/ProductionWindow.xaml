<Window x:Class="InventoryApp.ProductionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventoryApp"
        mc:Ignorable="d"
       Title="Производство изделий" Height="420" Width="600" MinHeight="420" MinWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="10">
            <Image Source="/Images/logo-01.jpg" Width="50" Height="50"/>
            <TextBlock Text="Производство изделий" FontSize="18" FontWeight="Bold" Margin="10,0,0,0"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock Text="Изделие" ToolTip="Выберите изделие для производства"/>
            <ComboBox x:Name="ProductComboBox" DisplayMemberPath="Name" Margin="0,5" SelectionChanged="ProductComboBox_SelectionChanged"/>
            <TextBlock Text="Материал" ToolTip="Выберите используемый материал"/>
            <ComboBox x:Name="MaterialComboBox" DisplayMemberPath="Name" Margin="0,5" SelectionChanged="ValidateInputs"/>
            <TextBlock Text="Количество" ToolTip="Введите количество произведенных изделий"/>
            <TextBox x:Name="QuantityTextBox" Margin="0,5" TextChanged="QuantityTextBox_TextChanged" PreviewTextInput="NumberValidationTextBox"/>
            <TextBlock Text="Фактически использовано материала" ToolTip="Введите количество использованного материала"/>
            <TextBox x:Name="ActualMaterialUsageTextBox" Margin="0,5" TextChanged="ActualMaterialUsageTextBox_TextChanged" PreviewTextInput="DecimalValidationTextBox"/>
            <TextBlock x:Name="ExcessMessageTextBlock" Foreground="Red" Margin="0,5"/>
            <TextBlock x:Name="CostTextBlock" Text="Себестоимость: 0" Margin="0,5"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button x:Name="SaveButton" Content="Сохранить" Click="Save_Click" Margin="5" IsEnabled="False">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>